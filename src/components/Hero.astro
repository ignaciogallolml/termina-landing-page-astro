---
import Countdown from '../components/utils/Countdown.astro';

interface Props {
	owner: string;
	logo: string;
	href: string;
}

const { href, owner, logo } = Astro.props;
---

<section id="home" class="home shadow-2xl">

    <div class="container max-w-full flex items-center justify-center min-h-[80vh] justify-items-center [&>span]:bg-gradient-to-r dark:[&>span]:from-blue-500 [&>span]:to-red-500 [&>span]:bg-clip-text [&>span]:text-transparent">
        <div class="p-24">
            <h1 class="text-8xl text-white uppercase font-extrabold text-center">Welcome to <span>Termina!</span></h1>
            <p class="text-white text-center">Will you be the hero that <span class="">save us?</span> Only you can stop Skullkid evil's plan to crash the moon.</p>
        </div>
    </div>

</section>

<style>

    .home{
        background-image:url('/img/bg.jpg');
        background-size:cover;
    }
    
</style>